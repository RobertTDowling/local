\usepackage{alltt}

% ecode environment: For quoting code
\newenvironment{ecode}
	       {\begin{quote}\begin{alltt}}
	       {\end{alltt}\end{quote}}

% ecode environemnt within a figure
\newcommand{\myfiglab}{}
\newcommand{\myfigcap}{}
\newenvironment{ecodefig}[3][htbp]
	       {\begin{figure}[#1]
		\renewcommand{\myfiglab}{#2}
		\renewcommand{\myfigcap}{#3}
		\begin{quote}
		\begin{alltt}}
	       {\end{alltt}
		\end{quote}
                \caption{\myfigcap}\label{\myfiglab}\end{figure}}
% Varwidth version of ecodefig: does centering of alltt inside a figure
\usepackage{varwidth}
\newenvironment{ecodefigc}[3][htbp]
	       {\begin{figure}[#1]
		\renewcommand{\myfiglab}{#2}
		\renewcommand{\myfigcap}{#3}
		\centering\begin{varwidth}{\linewidth}
		\begin{alltt}}
	       {\end{alltt}\end{varwidth}
                \caption{\myfigcap}\label{\myfiglab}\end{figure}}

% Varwidth version of ecodefig: does centering of alltt inside a figure
% with an fbox around the text
\newsavebox{\fmbox}
\newenvironment{ecodefigcf}[3][htbp]
	       {\begin{figure}[#1]
		\renewcommand{\myfiglab}{#2}
		\renewcommand{\myfigcap}{#3}
		\begin{lrbox}{\fmbox}
		\begin{varwidth}{\linewidth}
		\begin{alltt}}
	       {\end{alltt}\end{varwidth}
		\end{lrbox}\centering\fbox{\usebox{\fmbox}}
                \caption{\myfigcap}\label{\myfiglab}\end{figure}}

